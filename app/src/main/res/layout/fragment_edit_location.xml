<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.home.EditLocationFragment">

        <ImageView
            android:id="@+id/arrowBackBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iconback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/payment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/arrowBackBtn"
            app:layout_constraintTop_toBottomOf="@id/arrowBackBtn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/editLocationCardView"
            android:layout_width="335dp"
            android:layout_height="107dp"
            android:layout_marginTop="15dp"
            android:elevation="5dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="@id/payment_textview"
            app:layout_constraintTop_toBottomOf="@id/payment_textview">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/orderLocation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Location"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/gray" />

                <ImageView
                    android:id="@+id/locationImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/orderLocation_tv"
                    app:layout_constraintStart_toStartOf="@id/orderLocation_tv"
                    android:src="@drawable/iconlocation"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8502 Preston Rd. Inglewood, \nMaine 98380"
                    app:layout_constraintStart_toEndOf="@id/locationImgView"
                    app:layout_constraintTop_toTopOf="@id/locationImgView"
                    android:layout_marginStart="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/black" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/editLocationCardView1"
            android:layout_width="335dp"
            android:layout_height="115dp"
            android:layout_marginTop="15dp"
            android:elevation="5dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="@id/editLocationCardView"
            app:layout_constraintTop_toBottomOf="@id/editLocationCardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/deliverTo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliver To"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/gray" />

                <ImageView
                    android:id="@+id/locationImgView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/deliverTo_tv"
                    app:layout_constraintStart_toStartOf="@id/deliverTo_tv"
                    android:src="@drawable/iconlocation"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8502 Preston Rd. Inglewood, \nMaine 98380"
                    app:layout_constraintStart_toEndOf="@id/locationImgView1"
                    app:layout_constraintTop_toTopOf="@id/locationImgView1"
                    android:layout_marginStart="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/setLocationBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set location"
                    app:layout_constraintTop_toBottomOf="@id/locationImgView1"
                    app:layout_constraintStart_toStartOf="@id/locationImgView1"
                    android:layout_marginTop="8dp"
                    android:textSize="11sp"
                    android:textColor="@color/green" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>