<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.home.VoucherPromoFragment">

        <ImageView
            android:id="@+id/arrowBackBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iconback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/voucherPromoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Voucher Promo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrowBackBtn" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_frameLayout"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:background="@drawable/homeframe"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/voucherPromoTV"
            app:layout_constraintStart_toStartOf="@id/voucherPromoTV">

            <ImageView
                android:id="@+id/img_person"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/personimg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/specialDealTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="Special Deal For \nOctober"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:text="Buy Now"
                android:textColor="@color/green"
                app:layout_constraintStart_toStartOf="@+id/specialDealTV"
                app:layout_constraintTop_toBottomOf="@+id/specialDealTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_frameLayout"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:background="@drawable/frame2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/first_frameLayout"
            app:layout_constraintStart_toStartOf="@id/first_frameLayout">

            <ImageView
                android:id="@+id/flowers_img"
                android:layout_width="275dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flowerimg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/specialDealTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="Special Deal For \nOctober"
                android:textColor="#6B3A5B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:text="Buy Now"
                android:textColor="#6B3A5B"
                app:layout_constraintStart_toStartOf="@+id/specialDealTV2"
                app:layout_constraintTop_toBottomOf="@+id/specialDealTV2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/checkoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_search_btn"
            android:text="Check out"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>