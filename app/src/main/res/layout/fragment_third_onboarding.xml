<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.firstopenapp.ThirdOnboardingFragment">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/onboarding3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/comfort_food_lives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Food Ninja is Where Your \n Comfort Food Lives"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#09051C" />

        <TextView
            android:id="@+id/enjoy_fast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Here You Can find a chef or dish for every \n taste and color. Enjoy!"
            app:layout_constraintTop_toBottomOf="@+id/comfort_food_lives"
            android:gravity="center_horizontal"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Next"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/next_btn_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enjoy_fast" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>